<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.entities.CustomerDetails" table = "CustDetails">
      
      <meta attribute = "class-description">
          For CustomerDetails Class
      </meta>
      
      <id name = "cid" type = "int" column = "cust_id">
         <generator class="native"/>
      </id>
      
      <property name = "cname" column = "cust_name" type = "string"/>
       <property name = "caddress" column = "cust_address" type = "string"/>
     
      
   </class>
</hibernate-mapping>